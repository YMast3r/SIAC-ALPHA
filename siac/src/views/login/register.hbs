<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg text-gray-800">
    <h1 class="text-3xl font-bold text-center">Registro</h1>
      <form action="/register" method="POST" class="mt-4">
          <h1>Nombre</h1>
          <input type="text" name="nombre" placeholder="Nombre" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
          <h1>Correo Electronico</h1>
          <input type="email" name="email" placeholder="Correo Electronico" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
          <h1>Contraseña</h1>
          <input type="password" name="password" placeholder="Contraseña" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
          <h1>Confrimar Contraseña</h1>
          <input type="password" name="confirmPassword" placeholder="Confirmar Contraseña" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>
          <h1>Teléfono</h1>
          <input type="number" name="telefono" placeholder="Teléfono" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 bg-gray-200 focus:bg-white" required>

          <button type="submit" class="rounded-md bg-green-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-green-600 focus:bg-green-700">Enviar</button>
      </form>

    <a href="/login" class="block text-center text-blue-500 font-semibold hover:text-blue-600">¿Ya tienes una cuenta? Inicia sesión</a>

    {{#if error}}
      <p class="text-red-500 font-bold text-lg my-3">{{error}}</p>
    {{/if}}
</div>
