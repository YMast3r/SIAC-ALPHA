<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg">
  <h1 class="text-2x1 m-7 font-bold text-center">Ingresa aquí</h1>
	<form action="/identificacion" method="post" class="mt-4">
		<label for="email">
			<!-- font awesome icon -->

		</label>
		<input type="email" name="email" placeholder="Correo Electrónico" class=" border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300"id="email" required>
		<label for="password">

		<input type="password" name="password" placeholder="Contraseña" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300" id="password" required>
		<button type="submit" class="rounded-md bg-gray-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-gray-600 focus:bg-gray-700 hover:bg-gray-300" >enviar</button>
		
		{{#if error}}
            <p class="text-red-500 font-bold text-lg my-3">*{{error}}</p>
        {{/if}}
	</form>
</div>