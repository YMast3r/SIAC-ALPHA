<!-- Contenedor principal -->
<!--Se ajustó el tamaño del contenedor principal para que sea responsivo en diferentes tamaños de pantalla. (w-full sm:w-5/6 md:w-4/6 lg:w-2/3 xl:w-1/2)-->
<div class="mx-auto my-8 p-4 bg-white w-full sm:w-5/6 md:w-4/6 lg:w-2/3 xl:w-1/3 border rounded-lg shadow-lg">
        <!-- Script de Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Encabezado-->
    <!-- Título del formulario-->

    <h1 class="text-2x1 m-5 font-bold text-center">Regístrate aquí</h1>

    <form action="/alta" method="POST" onsubmit="return telefonoValid() && correoValid()" class="mt-4">

        <!-- Campos para los datos del usuario-->
        <!-- Campo para ingresar el nombre -->
        <label for="nombre"><i class="fas fa-user"></i> Usuario</label>
        <input type="text" name="nombre" placeholder="Nombre" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300" pattern="[a-zA-Z0-9\s]+" title="No se permiten acentos ni caracteres especiales" required value="{{formData.nombre}}">

        <!-- Campo para ingresar el correo electrónico -->
            <div class="form-group">
                <label for="correo_electronico"><i class="fas fa-envelope"></i> Correo Electrónico</label>
                <div class="relative">
                    <input type="email" name="correo_electronico" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" placeholder="Correo electrónico" id="correo_electronico" value="{{formData.correo_electronico}}" required>
                </div> 
                <small id="correoError" class="form-text text-danger text-red-600"></small>
            </div>

        <!-- Campo para ingresar el teléfono -->
            <div class="form-group">
                <label for="telefono"><i class="fas fa-phone"></i> Teléfono</label>
                <div class="relative">
                    <input type="tel" name="telefono" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" id="telefono" placeholder="Teléfono (ej. 449 223 9955)" value="{{formData.telefono}}" required>
                </div>    
                    <small id="telefonoError" class="form-text text-danger text-red-600"></small>
            </div>

        <!-- Campo para ingresar la contraseña -->
            <label for="password"><i class="fas fa-lock"></i> Contraseña</label>
                <div class="relative">
                    <input type="password" name="password"  id="password" placeholder="Contraseña" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" value="{{formData.password}}" required >

                    <div class="absolute right-2 top-1/2 transform -translate-y-1/2">
                        {{!-- ojo abierto --}}
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye" width="30" height="30" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" />
                            <path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" />
                        </svg>

                        {{!-- ojo cerrado --}}
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye-closed" width="30" height="30" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                            <path d="M21 9c-2.4 2.667 -5.4 4 -9 4c-3.6 0 -6.6 -1.333 -9 -4" />
                            <path d="M3 15l2.5 -3.8" />
                            <path d="M21 14.976l-2.492 -3.776" />
                            <path d="M9 17l.5 -4" />
                            <path d="M15 17l-.5 -4" />
                        </svg>
                    </div>
                </div>

        <!-- segundo campo de contraseña para confirmarla-->
            <label for="confPassword"><i class="fas fa-lock"></i> Confirmar Contraseña</label>        
            <div class="relative">

                <input type="password" name="confPassword" id="confPassword" placeholder="Confirmar contraseña" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10"  value="{{formData.confPassword}}" required>
                <div class="absolute right-2 top-1/2 transform -translate-y-1/2">
                    {{!-- ojo abierto --}}
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye" width="30" height="30" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" />
                        <path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" />
                    </svg>

                    {{!-- ojo cerrado --}}
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye-closed" width="30" height="30" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M21 9c-2.4 2.667 -5.4 4 -9 4c-3.6 0 -6.6 -1.333 -9 -4" />
                        <path d="M3 15l2.5 -3.8" />
                        <path d="M21 14.976l-2.492 -3.776" />
                        <path d="M9 17l.5 -4" />
                        <path d="M15 17l-.5 -4" />
                    </svg>
                </div>
            </div>

        <!-- Botón para enviar el formulario -->
        <!--Se ajustó el margen superior e inferior del botón para una mejor distribución en dispositivos móviles. (mt-4 mb-2)-->
            <button type="submit" class=" rounded-md bg-gray-500 w-full  text-white hover:bg-gray-600 focus:bg-gray-700 font-medium text-base px-6 py-3 block mt-4 mb-2 text-center " >Registrarse</button>


        <!--Sección para mostrar errores-->
        {{#if error}}
            <p class="text-red-500 font-bold text-lg my-3">*{{{error}}}</p>
        {{/if}}

    </form><!-- Cierre del formulario -->
</div> <!-- Cierre del contenedor principal -->
<script src="telefono.js"></script>    
<script src="correo.js"></script>    
<script src="ojo.js"></script>    
