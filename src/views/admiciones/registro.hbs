<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg shadow-lg">
    <h1 class="text-2x1 m-5 font-bold text-center">Regístrate aquí</h1>

    <form action="/alta" method="POST" class="mt-4">
        <h1>Usuario</h1>
        <input type="text" name="name" placeholder="Nombre" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300" required value="{{#if formData}}{{formData.name}}{{/if}}">


        <h1>Correo electrónico</h1>
        <input type="email" name="email" placeholder="Correo Electrónico" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300" required value="{{#if formData}}{{formData.email}}{{/if}}">

        <h1>Contraseña</h1>
        <input type="password" name="password" placeholder="Contraseña" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300" required value="{{#if formData}}{{formData.password}}{{/if}}">

        <h1>Confirmar contraseña</h1>
        <input type="password" name="confpassword" placeholder="Confirmar contraseña" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300" required value="{{#if formData}}{{formData.confpassword}}{{/if}}">

        <h1>Teléfono</h1>
        <input type="text" name="telefono" placeholder="Teléfono" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300" onkeydown="return event.key >= '0' && event. key <= '9' || event.key === 'Backspace' || event.key === 'Delete' || event.key === 'Tab'" required value="{{#if formData}}{{formData.telefono}}{{/if}}">
        
        <button type="submit" class="rounded-md bg-gray-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-gray-600 focus:bg-gray-700 hover:bg-gray-300" >enviar</button>

        {{#if error}}
            <p class="text-red-500 font-bold text-lg my-3">*{{error}}</p>
        {{/if}}
    </form>
</div>