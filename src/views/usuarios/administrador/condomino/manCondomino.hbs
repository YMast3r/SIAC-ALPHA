{{#if name}}
    <!DOCTYPE html>
    <html lang="es">
    <head>
        <script src="https://cdn.tailwindcss.com"></script><!--sirve para usar tailwind-->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </head>

    <body class="bg-indigo-200">

        <div>
            <a href="/renderManCondomino" class="font-semibold text-4xl hover:text-gray-400 flex justify-center m-5">Condóminos</a>

            <div class="flex justify-center m-5">
                <div class="overflow-x-auto max-h-60">
                    <table class="w-full">
                        <thead>
                            <tr>
                                <th class="px-4 py-2 bg-gray-400 border border-b-2 border-gray-500">ID</th>
                                <th class="px-6 py-2 bg-gray-400 border border-b-2 border-gray-500">NOMBRE</th>
                                <th class="px-4 py-2 bg-gray-400 border border-b-2 border-gray-500">CORREO</th>
                                <th class="px-4 py-2 bg-gray-400 border border-b-2 border-gray-500">TELÉFONO</th>
                                <th class="px-4 py-2 bg-gray-400 border border-b-2 border-gray-500">ESTADO</th>
                                <th class="px-2 py-2 bg-gray-400 border border-b-2 border-gray-500">EDITAR</th>
                                <th class="px-2 py-2 bg-gray-400 border border-b-2 border-gray-500">ANEXAR <br>PROPIEDAD</th>
                                <th class="px-2 py-2 bg-gray-400 border border-b-2 border-gray-500">PAGO</th>
                                <th class="px-2 py-2 bg-gray-400 border border-b-2 border-gray-500">INCIDENCIA</th>
                                <th class="px-2 py-2 bg-gray-400 border border-b-2 border-gray-500">SANCIÓN</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each datos}}
                                <tr>
                                    <td class="px-4 py-2 bg-gray-100 border border-gray-600 text-center">{{this.id}}</td>
                                    <td class="px-6 py-2 bg-gray-100 border border-gray-600">{{this.nombre}}</td>
                                    <td class="px-4 py-2 bg-gray-100 border border-gray-600">{{this.correo_electronico}}</td>
                                    <td class="px-4 py-2 bg-gray-100 border border-gray-600">{{this.telefono}}</td>
                                    <td class="px-4 py-2 bg-gray-100 border border-gray-600">{{this.status}}</td>
                                    <td class="px-4 py-2 bg-gray-100 border border-gray-600 text-center"><a href="/ediCondomino{{id}}"><svg class="h-8 w-10 text-gray-600"  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">  <path stroke="none" d="M0 0h24v24H0z"/>  <path d="M4 20h4l10.5 -10.5a1.5 1.5 0 0 0 -4 -4l-10.5 10.5v4" />  <line x1="13.5" y1="6.5" x2="17.5" y2="10.5" /></svg></a></td>

                                    <td class="px-8 py-2 bg-gray-100 border border-gray-600 text-center"><a href="/recuperarPropiedad-{{id}}"><svg class="w-12 h-9 text-gray-600" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m4 12 8-8 8 8M6 10.5V19a1 1 0 0 0 1 1h3v-3a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3h3a1 1 0 0 0 1-1v-8.5"/></svg></a></td>

                                    <td class="px-6 py-2 bg-gray-100 border border-gray-600 text-center"><a href="/recuperarPropiedadPago-{{id}}"><svg class="h-8 w-8 text-gray-600"  fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg></a></td>

                                    <td class="px-14 py-2 bg-gray-100 border border-gray-600"><a href="/manIncidencia-{{id}}"><svg class="h-8 w-8 text-gray-600"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round">  <polyline points="23 6 13.5 15.5 8.5 10.5 1 18" />  <polyline points="17 6 23 6 23 12" /></svg></a></td>
                                
                                    <td class="px-12 py-2 bg-gray-100 border border-gray-600 text-center"><a href="#"><svg class="h-8 w-8 text-gray-600"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round">  <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z" />  <line x1="12" y1="9" x2="12" y2="13" />  <line x1="12" y1="17" x2="12.01" y2="17" /></svg></a></td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card">
                {{#if modificar}}
                    <h2  class="font-semibold font-mono text-4xl flex justify-center m-5">Modifica condómino<h2/>
                {{else if anexarPropiedad}}
                    <h2 class="font-semibold text-4xl flex justify-center m-5">Anexar propiedad<h2/> 
                {{else}}
                    <h2  class="font-semibold text-4xl flex justify-center m-5">Alta de condómino<h2/> 
                {{/if}}

                {{#if anexarPropiedad}}
                                    
                <!-- Primera tabla -->
                {{#if propia}}
                <h2 class="font-semibold text-2xl flex justify-center m-5 text-gray-700">Propiedades del condomino</h2>
                <div class="overflow-x-auto max-h-60">
                    <div class="p-4">
    <table class="w-full">
        <thead>
            <tr>
                <th class="px-4 py-2 bg-gray-400 border border-b-2 border-gray-500">ID PROPIEDAD</th>
                <th class="px-6 py-2 bg-gray-400 border border-b-2 border-gray-500">DESCRIPCIÓN</th>
                <th class="px-4 py-2 bg-gray-400 border border-b-2 border-gray-500">TIPO</th>
            </tr>
        </thead>
        <tbody>
            {{#each propia}}
                <tr>
                    <td class="px-4 py-2 bg-gray-100 border border-gray-600 text-center">{{this.id_propiedad}}</td>
                    <td class="px-6 py-2 bg-gray-100 border border-gray-600">{{this.descripcion}}</td>
                    <td class="px-4 py-2 bg-gray-100 border border-gray-600">{{this.tipo_propiedad}}</td>
               </tr>
            {{/each}}
        </tbody>
    </table>
</div>

                </div>
                {{else}}
                    <h2 class="text-center text-gray-500">No hay propiedades que le pertenezcan al condomino</h2>
                {{/if}}
                    
                <!-- Segunda tabla -->
                {{#if propiedades}}
                <h2 class="text-center font-bold">Propiedades disponibles</h2>
                    <div class="overflow-x-auto max-h-60">
                        <table class="w-full">
                            <thead>
                                <tr>
                                    <th class="px-4 py-2 bg-gray-400 border border-b-2 border-gray-500">ID PROPIEDAD</th>
                                    <th class="px-6 py-2 bg-gray-400 border border-b-2 border-gray-500">DESCRIPCIÓN</th>
                                    <th class="px-4 py-2 bg-gray-400 border border-b-2 border-gray-500">TIPO PROPIEDAD</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each propiedades}}
                                    <tr>
                                        <td class="px-4 py-2 bg-gray-100 border border-gray-600 text-center">{{this.id_propiedad}}</td>
                                        <td class="px-6 py-2 bg-gray-100 border border-gray-600">{{this.descripcion}}</td>
                                        <td class="px-4 py-2 bg-gray-100 border border-gray-600">{{this.tipo_propiedad}}</td>
                                        <td class="px-4 py-2 bg-gray-100 border border-gray-600"><a href="/anexarPropiedad-{{id_propiedad}}">SELECT</a></td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                {{else}}
                    <h2 class="font-semibold text-lg flex justify-center m-5 text-gray-700">No hay propiedades disponibles</h2>
                {{/if}}

                {{else}}
                    <div class="mx-auto my-8 p-4 bg-white w-full sm:w-5/6 md:w-4/6 lg:w-2/3 xl:w-1/2 border rounded-lg shadow-lg">
                        <div class="card-body">
                            <form action="/manipulaCondomino" method="POST" onsubmit="return telefonoValid() && correoValid()">
                                    <label for="nombre"><i class="fas fa-user"></i> Usuario</label>
                                    <div class="relative">
                                        {{#if modificar}}
                                            <input type="text" name="nombre" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" placeholder="Usuario" id="nombre" pattern="[a-zA-Z0-9\s]+" title="No se permiten acentos ni caracteres especiales" value="{{usuario.nombre}}" readonly>
                                        {{else}}
                                            <input type="text" name="nombre" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" placeholder="Usuario" id="nombre" pattern="[a-zA-Z0-9\s]+" title="No se permiten acentos ni caracteres especiales" value="{{usuario.nombre}}" required>
                                        {{/if}}  
                                    </div>
                                
                                
                                <div class="form-group">
                                    <label for="correo_electronico"><i class="fas fa-envelope"></i> Correo Electrónico</label>
                                    <div class="relative">
                                        <input type="email" name="correo_electronico" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" placeholder="Correo electrónico" id="correo_electronico" value="{{usuario.correo_electronico}}" required>
                                    </div> 
                                    <small id="correoError" class="form-text text-danger text-red-600"></small>
                                </div>
                                
                                <!-- Campo para ingresar el teléfono -->
                                <div class="form-group">
                                    <label for="telefono"><i class="fas fa-phone"></i> Teléfono</label>
                                    <div class="relative">
                                        <input type="tel" name="telefono" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" id="telefono" placeholder="Teléfono (ej. 449 223 9955)" value="{{usuario.telefono}}" required>
                                    </div>    
                                        <small id="telefonoError" class="form-text text-danger text-red-600"></small>
                                </div>

                                <label for="password"><i class="fas fa-lock"></i> Contraseña</label>
                                <div class="relative">
                                    {{#if modificar}}
                                        <input type="password" name="password" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" placeholder="Nueva contraseña (si no desea modificar la contraseña, déjelo en blanco)" id="passwordEdi" value="{{usuario.password}}">
                                    {{else}}
                                        <input type="password" name="password" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" placeholder="Contraseña" id="password" value="{{usuario.password}}" required>
                                    {{/if}}
                                    <div class="absolute right-2 top-1/2 transform -translate-y-1/2">
                                        {{!-- ojo abierto --}}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye" width="30" height="30" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                            <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" />
                                            <path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" />
                                        </svg>

                                        {{!-- ojo cerrado --}}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye-closed" width="30" height="30" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                                <path d="M21 9c-2.4 2.667 -5.4 4 -9 4c-3.6 0 -6.6 -1.333 -9 -4" />
                                                <path d="M3 15l2.5 -3.8" />
                                                <path d="M21 14.976l-2.492 -3.776" />
                                                <path d="M9 17l.5 -4" />
                                                <path d="M15 17l-.5 -4" />
                                        </svg>
                                    </div>
                                </div>

                                <label for="confPassword"><i class="fas fa-lock"></i> Confirmar Contraseña</label>        
                                <div class="relative">
                                    {{#if modificar}}
                                        <input type="password" name="confPassword"  id="confPassword" placeholder="Confirmar contraseña nueva" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" value="{{usuario.confPassword}}">
                                    {{else}}
                                        <input type="password" name="confPassword"  id="confPasswordEdi" placeholder="Confirmar contraseña" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10" value="{{usuario.confPassword}}" required >
                                    {{/if}}
                                    <div class="absolute right-2 top-1/2 transform -translate-y-1/2">
                                        {{!-- ojo abierto --}}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye" width="30" height="30" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                            <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" />
                                            <path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" />
                                        </svg>

                                        {{!-- ojo cerrado --}}
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye-closed" width="30" height="30" viewBox="0 0 24 24" stroke-width="1.5" stroke="#000000" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                            <path d="M21 9c-2.4 2.667 -5.4 4 -9 4c-3.6 0 -6.6 -1.333 -9 -4" />
                                            <path d="M3 15l2.5 -3.8" />
                                            <path d="M21 14.976l-2.492 -3.776" />
                                            <path d="M9 17l.5 -4" />
                                            <path d="M15 17l-.5 -4" />
                                        </svg>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="status"><i class="fas fa-user"></i> Estado</label>
                                    <select id="status" name="status" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10">
                                        {{#each estados}}
                                            {{#isEqual this.id_status this.correcto}}
                                                <option value="{{this.id_status}}" selected>{{this.descripcion}}</option>
                                            {{else}}
                                                <option value="{{this.id_status}}">{{this.descripcion}}</option>
                                            {{/isEqual}}
                                        {{/each}}
                                    </select>
                                </div>

                                {{#if error}}
                                    <h4 style="text-align: center; color: red;">*{{{error}}}</h4>
                                {{/if}}

                                <button type="submit" class=" rounded-md bg-gray-500 w-full  text-white hover:bg-gray-600 focus:bg-gray-700 font-medium text-base px-6 py-3 block mt-4 mb-2 text-center" >Enviar</button>
                            </form>
                        </div>
                    </div>
                {{/if}}
            
        </div>
    </div>
    <script src="telefono.js"></script>    
    <script src="correo.js"></script> 
    <script src="ojo.js"></script>    
    </body>
    </html>

{{else}}
    <div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
        <h1 style="font-size: 3em;">La sesión ha expirado. Por favor, inicie la sesión nuevamente.</h1>
    </div>
{{/if}}