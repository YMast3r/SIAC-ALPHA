    <script>
        // Abre una nueva ventana con la imagen en tamaño completo
        function mostrarImagen(src) {
        window.open(src, "_blank");
        }
        // Obtener los elementos de entrada por su ID
        const recargoInput = document.getElementById('recargo');

        // Función para validar que el input sea un número entero positivo
        function validarInput(input) {
            input.addEventListener('input', function () {
                // Remover caracteres no numéricos utilizando una expresión regular
                let valor = input.value.replace(/\D/g, '');
                // Asignar el valor limpio al campo de entrada
                input.value = valor;
            });
        }

        // Llamar a la función validarInput para cada input
        validarInput(recargoInput);
    </script>    
</body>
