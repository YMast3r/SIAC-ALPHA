            <div class="mx-auto my-8 p-4 bg-white w-full sm:w-5/6 md:w-4/6 lg:w-2/3 xl:w-1/3 border rounded-lg shadow-lg">
                <!-- Encabezado-->
                <!-- Título del formulario-->
                <h1 class="text-2x1 m-5 font-bold text-center">Regístra pago aquí</h1>

                <form action="/altaPago" method="POST" class="mt-4" enctype="multipart/form-data">
                    <!-- Campos para los datos del pago-->

                    <!-- Campo para ingresar el Recargo -->
                    <label for="recargo"><i class="fas fa-money-bill-alt"></i> Recargo</label>
                    <input type="tel" id="recargo" name="recargo" placeholder="Recargo"
                        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300"
                        value="{{data.recargo}}">

                    <label for="mes"><i class="fas fa-calendar"></i> Mes</label>
                    <select id="mes" name="mes"
                        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10">
                        {{#each meses}}
                        {{#isEqual this.mes this.correcto}}
                        <option value="{{this.mes}}" selected>{{this.descripcion}}</option>
                        {{else}}
                        <option value="{{this.mes}}">{{this.descripcion}}</option>
                        {{/isEqual}}
                        {{/each}}
                    </select>

                    <label for="anio"><i class="fas fa-calendar"></i> Año</label>
                    <select id="anio" name="anio"
                        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300 pr-10">
                        {{#each años}}
                        {{#isEqual this.correcto 1}}
                        <option value="{{this.año}}" selected>{{this.año}}</option>
                        {{else}}
                        <option value="{{this.año}}">{{this.año}}</option>
                        {{/isEqual}}
                        {{/each}}
                    </select>

                    <!-- Campo para subir una imagen -->
                    <label for="imagen"><i class="fas fa-image"></i> Subir imagen</label>
                    <input type="file" id="imagen" name="imagen" accept="image/*"
                        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white hover:bg-gray-300" required>

                    <!-- Botón para enviar el formulario -->
                    <!--Se ajustó el margen superior e inferior del botón para una mejor distribución en dispositivos móviles. (mt-4 mb-2)-->
                    <button type="submit"
                        class="rounded-md bg-gray-500 w-full text-white hover:bg-gray-600 focus:bg-gray-700 font-medium text-base px-6 py-3 block mt-4 mb-2 text-center">Enviar</button>

                    <!--Sección para mostrar errores-->
                    {{#if error}}
                    <p class="text-red-500 font-bold text-lg my-3">*{{{error}}}</p>
                    {{/if}}
                </form><!-- Cierre del formulario -->
            </div> <!-- Cierre del contenedor principal -->
            </div>
        {{!-- Condicon de propiedad --}}
        {{/if}}
        {{!-- Condicon en caso de que no haya una propiedad --}}
        {{else}}
